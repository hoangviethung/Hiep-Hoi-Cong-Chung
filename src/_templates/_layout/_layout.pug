block var

doctype html

html(lang="vi")
	head
		title #{title}
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		link(rel="stylesheet", href="./css/core.min.css")
		link(rel="stylesheet", href="./css/main.min.css")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@fancyapps/fancybox@3.5.6/dist/jquery.fancybox.min.css")
		link(rel="stylesheet", href="https://codepen.io/fancyapps/pen/Kxdwjj")
	body
		div#fb-root
		block loading
		block header
			include _header.pug
		section#body-smoothScroll
			block banner,breadcrumb
			main
				block main
				#js-page-verify(class=bodyClass hidden)
			block footer
				include _footer.pug
			#back_to_top
				img.lazyload.blur-up(data-src="./assets/icons/back-top-top.svg", alt="BACK-TO-TOP")
			#check_login
				input(type="text" hidden data-islogin="True")
			#overlay
		script(type="text/javascript", src='https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.3')
		script(type="text/javascript", src="https://maps.googleapis.com/maps/api/js?&libraries=places&key=AIzaSyCHvmyTralDp2Y0m7zEiN185u1vtArcC5s")
		script(src='https://apis.google.com/js/platform.js?onload=onLoadCallback')
		script(type="text/javascript", src="./js/core.min.js")
		script(type="text/javascript", src="./js/main.min.js")
		block scripts